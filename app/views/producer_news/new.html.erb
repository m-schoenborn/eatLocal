<div class="container">
  <div class="row w-100">
    <div class="col-xs-12 col-sm-8 offset-sm-2 col-lg-6 offset-lg-3">
      <div class="form-login">
      <h3 style="text-align: center;">ADD NEWS TO YOUR BUSINESS PAGE</h3>
    <%= simple_form_for [@producer, @producer_news] do |f| %>
      <%= f.input :title %>
      <%= f.input :description%>

      <div class="row d-flex justify-content-center">
        <div class="col-align-self-center">
          <div>
             <%= f.button :submit, "Send", class: "btn-green" %>
          </div>
        </div>
      </div>
    <% end %>
        <div class="container mt-5 pt-4">
            <div class="row d-flex justify-content-center">
             <div class="col-align-self-center">
                <div>
                    <%= link_to "Back", root_path, class: "text-secondary"%>
                </div>
             </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>

