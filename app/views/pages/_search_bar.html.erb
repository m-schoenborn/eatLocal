<%= form_tag producers_path, method: :get, class: "search-bar" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a producer"
  %>
  <%= hidden_field_tag :lat, '', id: 'search_lat' %>
  <%= hidden_field_tag :lng, '', id: 'search_lng' %>
  <%= submit_tag "Search", class: "btn-green" %>
<% end %>
