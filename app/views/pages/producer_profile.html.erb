<div class="container">
  <div class="welcome d-flex justify-content-start mt-5">
    <div class="avatar-info">
      <div class="avatar-image mt-3 mr-3">
        <%= user_image(current_user) %>
      </div>
    </div>
    <div class="welcome-user d-flex align-items-center">
      <div class="d-flex flex-column">
        <div class="welcome-back mt-2">
          <% if user_signed_in? %>
            <% if current_user.first_name.present? %>
              <h4><%= "WELCOME BACK #{current_user.first_name.upcase} #{current_user.last_name.upcase}!" %></h4>
            <% else %>
              <h4><%= "WELCOME BACK #{current_user.first_name} #{current_user.last_name}!" %></h4>
            <% end %>
          <% end %>
        </div>
        <div class="go-user-profile pt-3">
          <%= link_to "VIEW MY BUSINESS PAGE", producer_path(current_user.producer)%>
        </div>
      </div>
    </div>
  </div>
</div>
