<div class="container">
  <div class="welcome d-flex justify-content-start mt-5">
    <div class="avatar-info">
      <div class="avatar-image mt-3 mr-3">
        <%= user_image(current_user) %>
      </div>
    </div>
    <div class="welcome-user d-flex align-items-center">
      <div class="d-flex flex-column">
        <div class="welcome-back">
          <% if user_signed_in? %>
            <% if current_user.first_name.present? %>
              <h3><%= "WELCOME BACK #{current_user.first_name.upcase} #{current_user.last_name.upcase}!" %></h3>
            <% else %>
              <h3><%= "WELCOME BACK #{current_user.first_name} #{current_user.last_name}!" %></h3>
            <% end %>
          <% end %>
        </div>
        <div class="go-user-profile pt-3">
          <!-- <p><%= link_to "View my business page", producer_path()%></p> -->
        </div>
      </div>
    </div>
  </div>
</div>
