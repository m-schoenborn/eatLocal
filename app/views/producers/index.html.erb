<div class="container">
  <h1>Check out producers near you</h1>
  <div class="row">
    <div class="map-container col-12 col-lg-4">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
      </div>
    </div>

    <div class="producers-container col-12 col-lg-8">
      <% @producers.each do |producer| %>
        <p>This will be a list of local producers.</p>
      <% end %>
    </div>
  </div>
</div>
