<div class="container ml-0 mt-2">
  <div class="row">
    <div class="map-container col-lg-6">
      <div id="map"
        style="width: 100%;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY']%>">
      </div>
    </div>

    <div class="producer-cards col-lg-6">
      <div class="searchbar">
        <h4>Looking for a specific product?</h4>
        <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn-main">
            <i class="fas fa-search"></i> Search
          </button>
        </div>
<% end %>
      </div>
      <% @producers.each do |producer| %>
        <div class="producer-card mb-2">
          <img src="https://images.unsplash.com/photo-1507598641400-ec3536ba81bc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" alt="">
          <div class="card-infos">
            <div class="name"><h4><%= producer.name %></h4></div>
            <div class="address"><p>Location:<%= producer.address %></p></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
