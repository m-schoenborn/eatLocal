

<div d-flex justify-content-center>
<h1 ><%= @producer.name %></h1>
</div>


<div>
  <div class="container d-flex p-0 main-container">
    <div class="container p-0 mr-2 d-flex flex-column justify-content-between description-box">
      <div class="container mt-2 d-flex justify-content-between">
        <div class="row justify-content-center">
          <div class="col-12">
            <p>Phone number - <%= @producer.phone_number %></p>
            <p>E-mail - <%= @producer.email %></p>
            <p>Address - <%= @producer.address %></p>
          </div>
        </div>
      </div>

      <div class="container border-top pt-3">
        <div class="row justify-content-center">
          <div class="col-12 p-0">
            <p class="text-justify"><%= @producer.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
