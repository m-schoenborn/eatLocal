require 'faker'

<div class="container">
  <div class="producer-banner">
    <div class="producer-banner-text">
      <h1><%= @producer.name %></h1>
    </div>
  </div>
  <div class="container d-flex p-0 main-container">
    <div class="container p-0 mr-2 d-flex flex-column justify-content-between description-box">
      <div class="container mt-2 d-flex justify-content-between">
        <div class="row justify-content-center">
          <div class="col-12">
            <p>Price Range - <%= @chef.price_range %></p>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-12">
            <p>Address - <%= @chef.location %></p>
          </div>
        </div>
      </div>

      <div class="container border-top pt-3">
        <div class="row justify-content-center">
          <div class="col-12 p-0">
            <p class="text-justify"><%= @chef.description %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
